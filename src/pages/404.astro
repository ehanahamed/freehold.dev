---
import Layout from '../layouts/Layout.astro';
import "../styles/parallax-stars.css";
---
<style>
    .pretty-green-text-gradient {
        background-image: linear-gradient(to right, #89FFCC, #9EFF76);
        background-clip: text;
        color: transparent;
    }
</style>
<Layout>
    <div class="grid page" style="padding-top: 4rem;">
        <div class="content">
            <p class="fg0" style="font-size: 1.6rem;">404</p>
            <h1 class="h2 pretty-green-text-gradient" style="margin-top: 0px; margin-bottom: 2rem;">Not Found</h1>
            <p>Sorry, that page doesn't exist</p>
            <div class="flex">
                <a href="/" class="button alt">View Homepage?</a>
            </div>
        </div>
    </div>
</Layout>
